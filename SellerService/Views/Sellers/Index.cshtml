@model IEnumerable<SalesWebMvc.Models.Sellers>

@{
    ViewData["Title"] = "Sellers";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-area="" asp-controller="Sellers" asp-action="Create" class="btn btn-primary">Create New</a>
</p>


<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Id)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().BirthDate)</th>
            <th>@Html.DisplayNameFor(model => model.First().BaseSalary)</th>
        </tr>
        <th></th>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@item.BirthDate.ToString("dd/MM/yyyy")</td>
                <td>@item.BaseSalary.ToString("C")</td>
                <td>
                    <a asp-area="" asp-controller="Sellers" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-area="" asp-controller="Sellers" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a asp-area="" asp-controller="Sellers" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
